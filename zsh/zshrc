# Uncommment this line and the last line in the file to profile startup time
# zmodload zsh/zprof

# .zshrc is sourced for interactive shells only

# -- ZSH

# emacs-style keybindings
bindkey -e
# long history
HISTSIZE=1000
SAVEHIST=5000
# additional completions
fpath+=$HOME/.zfunc

# -- Homebrew

eval "$(/opt/homebrew/bin/brew shellenv)"

# -- git

alias gco='git checkout'
alias gb='git branch'
alias gs='git status'

# -- Kubernetes

alias kc='kubectl'

# -- Rust

export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"

# -- Python

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
export PATH="$HOME/.poetry/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"
export PANTS_LINT=true

# -- Docker

alias dc="docker-compose -f docker-compose.yml"

# -- Tab completion

autoload -Uz compinit
compinit -C
zstyle ':completion::compatibility:*' rehash true
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path $HOME/.zsh/cache

# -- GPG

export GPG_TTY=$(tty)

# -- direnv

(( $+commands[direnv] )) && eval "$(direnv hook zsh)"

# -- Rippling

export AWS_REGION=us-west-2
export DEVELOPER_NAME=tysonmote
export REMOTE_IP=10.201.8.109
export REMOTE_PRIVATE_KEY_FILE="/Users/tyson/.ssh/id_ed25519"
export SKIP_CHECK_VPN=true
export USE_SSO=true

# -- oh-my-zsh

ZSH=$HOME/.oh-my-zsh
ZSH_THEME="tyson"
DEFAULT_USER=`whoami`
ENABLE_CORRECTION="false"
DISABLE_MAGIC_FUNCTIONS=true # Don't escape pasted input
SHOW_AWS_PROMPT=false # Don't put AWS info in $RPROMPT
zstyle ':omz:update' mode disabled # Don't check for updates
DISABLE_LS_COLORS=true
alias ls='ls -G'  # Default macOS colors
plugins=(golang aws pyenv)
source $ZSH/oh-my-zsh.sh

# -- fzf

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git --exclude vendor'

# -- Hermit

# Generated by Hermit; START; DO NOT EDIT.
HERMIT_ROOT_BIN="${HERMIT_ROOT_BIN:-"$HOME/bin/hermit"}"
eval "$(test -x $HERMIT_ROOT_BIN && $HERMIT_ROOT_BIN shell-hooks --print --zsh)"
# Generated by Hermit; END; DO NOT EDIT.

# -- Custom stuff

g() {
  cd "$HOME/dev/src/github.com/Rippling/$1"
}

_g_complete() {
  local base="$HOME/dev/src/github.com/Rippling"
  _files -W "$base" -/ -g '*'
}

compdef _g_complete g

# -- zsh profiling (must be last line)

# zprof
