# .zshrc is sourced for interactive shells only

# -- ZSH

# emacs-style keybindings
bindkey -e
HISTSIZE=1000
SAVEHIST=10000

# -- oh-my-zsh

ZSH=$HOME/.oh-my-zsh
ZSH_THEME="tyson"
ENABLE_CORRECTION="false"
DISABLE_AUTO_UPDATE=true
plugins=(brew heroku golang vagrant rake-fast)
source $ZSH/oh-my-zsh.sh

# -- fzf

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git --exclude vendor'

# -- git

alias gpr='git push -u origin `git rev-parse --abbrev-ref HEAD` ; hub pull-request'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gb='git branch'
alias gs='git status'

# -- Ruby

export PATH=$HOME/.rbenv/bin:$PATH
eval "$(rbenv init -)"
alias rake='noglob rake'
alias be="bundle exec"
alias dc="docker-compose -f docker-dev.yml"

# -- Tab completion

zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ~/.zsh/cache
source /usr/local/share/zsh/site-functions/_aws   # awscli

# -- Packer / ec2-ami-tools stuff

export JAVA_HOME="$(/usr/libexec/java_home)"
export EC2_AMITOOL_HOME="$(find /usr/local/Cellar/ec2-ami-tools/*/libexec -type d | head -n 1)"
export EC2_HOME=$EC2_AMITOOL_HOME

# -- Docker

# which docker-machine > /dev/null && eval "$(docker-machine env rg-docker)"
